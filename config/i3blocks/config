[USER]
command='whoami'
interval=-1
color=#6040ff

##LAPTOP##[BRIGHTNESS]
##LAPTOP##command=sh /usr/share/i3blocksScripts/brightnessDisplay.sh
##LAPTOP##interval=20
##LAPTOP##signal=3
##LAPTOP##color=#ffff00

[DISK]
command=df -h | awk '/home/{ printf("Disk: %4s/%s\n", $4, $2) }'
interval=10

[MEM]
command=free -h | awk '/Mem:/ { printf("RAM: %5s/%s\n", $3, $2) }'
interval=1

[MONTH]
command=date +"%F"
interval=10

