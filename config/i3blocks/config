[USER]
command='whoami'
interval=60
color=#6040ff

[DISK]
command=df -h / | awk '/\//{ printf("Disk:%4s/%s\n", $4, $2) }'
interval=2

[MEM]
command=free -h | awk '/Mem:/ { printf("RAM: %5s/%s\n", $3, $2) }'
interval=1

[MONTH]
command=date +"%F"
interval=1

[VOLUME]
command=awk -F"[][]" '/dB/ { print $2 }' <(amixer -M sget Master)
interval=1
signal=2
color=#9070ff

[TIME]
command=date +"%r"
interval=1
color=#00ffff

